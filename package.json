{
  "name": "kraken-api-universal-client",
  "version": "0.1.0",
  "description": "Universal (browser & Node.js) client for the Kraken API",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fredrikolovsson/kraken-api-universal-client.git"
  },
  "keywords": [
    "kraken",
    "api",
    "universal",
    "client",
    "isomorphic",
    "fetch",
    "promise"
  ],
  "author": "Fredrik Olovsson (http://fredrikolovsson.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fredrikolovsson/kraken-api-universal-client/issues"
  },
  "homepage": "https://github.com/fredrikolovsson/kraken-api-universal-client#README",
  "main": "build/index.js",
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "scripts": {
    "dev": "watch 'npm run build' src",
    "build": "babel src -d build",
    "lint": "eslint 'src/**/*.js'",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run build",
    "release": "np"
  },
  "dependencies": {
    "fetch-ponyfill": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jest": "^20.0.3",
    "jest": "^20.0.4",
    "np": "^2.16.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=6.11.1"
  }
}
